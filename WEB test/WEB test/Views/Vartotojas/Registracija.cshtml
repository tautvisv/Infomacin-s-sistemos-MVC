@model OroUostoSistema.DatabaseOroUostas.Uzsakovas

@{
    ViewBag.Title = "Registracija";
}

<h2>Registracija</h2>

@using (Html.BeginForm()) 
{
    @*@Html.AntiForgeryToken()*@
    
    <div class="form-horizontal">
        <h4>Uzsakovas</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Vardas, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Vardas, new { required = "required" })
                @Html.ValidationMessageFor(model => model.Vardas)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pavarde, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Pavarde, new { required = "required" })
                @Html.ValidationMessageFor(model => model.Pavarde)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ElPastas, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ElPastas, new { required = "required", type="email" })
                @Html.ValidationMessageFor(model => model.ElPastas)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Numeris, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Numeris, new { required = "required", @pattern = @"^\+?\d{1,9}" })
                @Html.ValidationMessageFor(model => model.Numeris)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Slaptazodis, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Slaptazodis, new { type="password", required = "required" })
                @Html.ValidationMessageFor(model => model.Slaptazodis)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ReSlaptazodis, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ReSlaptazodis,new { type="password", required = "required"})
                @Html.ValidationMessageFor(model => model.ReSlaptazodis)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sukurti" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
