@model IEnumerable<OroUostoSistema.DatabaseOroUostas.Skrydis>

@{
    ViewBag.Title = "Skrydis";
}

<h2>Skrydžiai</h2>
@using(Html.BeginForm("Paieska","Klientas")){
<div class="search-panel">
    @Html.TextBox("searchText", "", new { @class = "form-control", placeholder="Paieška..." })
    <button type="submit" class="btn">Ieškoti</button>
</div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pavadinimas)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pavadinimas)
            </td>
            <td>
                @Html.ActionLink("Pirkti", "RezervuotiBilieta", new { id = item.ID })
            </td>
        </tr>
    }

</table>
